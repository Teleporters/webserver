doctype
html(prefix="og: http://ogp.me/ns#", lang="en")
  head
    title= title
    style
      | html, body {
      | padding: 0;
      | margin:  0;
      | }
      | img {
      | width: 100%;
      | margin:  0;
      | padding: 0;
      | }
    meta(http-equiv="Content-Type", content="text/html; charset=utf-8")
    meta(name="viewport", content="width=device-width, initial-scale=1")
    meta(name="mobile-web-app-capable", content="yes")
    meta(name="apple-mobile-web-app-capable", content="yes")

    meta(property="og:title", content="360° view of " + title)
    meta(property="og:type", content="website")
    meta(property="og:url", content="http://spots.teleports.me/" + id)
    meta(property="og:image", content=previewUrl)
    meta(property="og:description", content="See a 360° view of " + title)
    meta(property="og:site_name", content="Teleports.me")

  body
    block content
